<Page
    navigatingTo="onNavigatingTo"  
    xmlns="http://www.nativescript.org/tns.xsd">

    <!--Add your page content here-->
    <ActionBar title="제비뽑기">
    </ActionBar>

    <FlexboxLayout flexDirection="column" class="page-content home">
        <StackLayout flexGrow="1" verticalAlignment="bottom" margin="10" color="black">
            <StackLayout target="participant" tap="onTapNumber">
                <Label text="참여자는" fontSize="60"></Label>
                <Label>
                    <FormattedString>
                        <Span text="{{ participant }} " fontSize="100" fontWeight="Bold" borderWidth="1"></Span>
                        <Span text="명 입니다." fontSize="50"></Span>
                    </FormattedString>
                </Label>
            </StackLayout>
            <StackLayout target="winner" tap="onTapNumber">
                <Label text="당첨자는" fontSize="60"></Label>
                <Label>
                    <FormattedString>
                        <Span text="{{ winner }} " fontSize="100" fontWeight="Bold"></Span>
                        <Span text="명 입니다." fontSize="50"></Span>
                    </FormattedString>
                </Label>
            </StackLayout>
        </StackLayout>
        <StackLayout flexGrow="0">
            <Button text="시작" tap="onStartTap" fontSize="50"></Button>
        </StackLayout>
    </FlexboxLayout>
</Page>
